{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish -c Release -o /app"
  },
  "deploy": {
    "startCommand": "dotnet /app/MuhasebeAPI.dll",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE"
  }
}